    <servlet-mapping>
        <servlet-name>CadastroLoginServlet</servlet-name>
        <url-pattern>/CadastroLogin</url-pattern>
    </servlet-mapping>
    <!-- Servlet para o LoginControllers -->
    <servlet>
        <servlet-name>LoginControllers</servlet-name>
        <servlet-class>LoginControllers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControllers</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <!-- Servlet para o painel do aluno -->
    <servlet>
        <servlet-name>painelAluno</servlet-name>
        <jsp-file>/painelAluno.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>painelAluno</servlet-name>
        <url-pattern>/painelAluno</url-pattern>
    </servlet-mapping>
    <!-- Servlet para o painel do professor -->
    <servlet>
        <servlet-name>painelProfessor</servlet-name>
        <jsp-file>/painelProfessor.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>painelProfessor</servlet-name>
        <url-pattern>/painelProfessor</url-pattern>
    </servlet-mapping>
    <!-- Servlet para o painel do administrador -->
    <servlet>
        <servlet-name>painelAdmin</servlet-name>
        <jsp-file>/painelAdmin.jsp</jsp-file>
