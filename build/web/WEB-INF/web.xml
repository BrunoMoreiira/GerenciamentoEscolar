        <servlet-name>ServletExcluirComunicados</servlet-name>
        <url-pattern>/del1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditarComunicado</servlet-name>
        <url-pattern>/alter1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/update1</servlet-name>
        <url-pattern>/ServletUpdateComunicados</url-pattern>
    </servlet-mapping>
